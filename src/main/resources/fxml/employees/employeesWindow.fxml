<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="orthae.com.github.medicalmanagementsystem.client.employees.EmployeesWindowController" stylesheets="/style.css"
            fx:id="employeesWindow">
    <top>
        <GridPane styleClass="employees-search-box">
            <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameTextfield" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Surname" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="surnameTextfield" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="usernameTextfield" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="emailTextfield" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
            <Label text="Active" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
            <ComboBox GridPane.rowIndex="0" GridPane.columnIndex="5"/>
            <Button text="Search" GridPane.rowIndex="0" onAction="#search" GridPane.columnIndex="6"/>
            <Button text="Clear" GridPane.rowIndex="0" onAction="#clear" GridPane.columnIndex="7"/>

        </GridPane>
    </top>

    <center>
        <HBox>
            <TableView HBox.hgrow="ALWAYS" fx:id="tableView">
                <columns>
                    <TableColumn fx:id="idColumn" text="Id"/>
                    <TableColumn fx:id="nameColumn" text="Name"/>
                    <TableColumn fx:id="surnameColumn" text="Surname"/>
                    <TableColumn fx:id="usernameColumn" text="Username"/>
                    <TableColumn fx:id="emailColumn" text="Email"/>
                    <TableColumn fx:id="activeColumn" text="Active"/>
                </columns>
            </TableView>
            <VBox styleClass="employees-button-box">
                <Button text="Add" onAction="#add" styleClass="employees-button"/>
                <Button text="Edit" onAction="#edit" styleClass="employees-button"/>
                <Button text="Delete" onAction="#delete" styleClass="employees-button"/>
                <Button text="Placeholder" styleClass="employees-button"/>
                <Button text="Placeholder" styleClass="employees-button"/>
            </VBox>
        </HBox>
    </center>


</BorderPane>
