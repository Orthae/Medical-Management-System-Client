<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="orthae.com.github.medicalmanagementsystem.client.management.sessions.SessionsWindowController"
      prefHeight="400.0" prefWidth="600.0" stylesheets="/css/sessions.css">
    <GridPane styleClass="sessions-search-box">
        <Label text="Username" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameTextfield" GridPane.columnIndex="1"/>
        <Label text="IP Address" GridPane.columnIndex="2"/>
        <TextField fx:id="ipAddressTextfield" GridPane.columnIndex="3"/>
        <Label text="Active" GridPane.columnIndex="4"/>
        <ComboBox fx:id="activeCombobox" GridPane.columnIndex="5"/>
        <Label text="Created" GridPane.columnIndex="6"/>
        <DatePicker fx:id="createdDatepicker" styleClass="sessions-date-picker" GridPane.columnIndex="7"/>
        <Label text="Expiring" GridPane.columnIndex="8"/>
        <DatePicker fx:id="expiringDatepicker" styleClass="sessions-date-picker" GridPane.columnIndex="9"/>
        <Button text="Search" onAction="#search" GridPane.columnIndex="10"/>
        <Button onAction="#clear" text="Clear" GridPane.columnIndex="11"/>
    </GridPane>
    <!--suppress JavaFxUnresolvedFxIdReference -->
    <fx:include fx:id="sessionsTable" source="sessionsTable.fxml" VBox.vgrow="ALWAYS"/>

</VBox>
